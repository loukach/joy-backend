{
  "name": "joy-backend",
  "version": "1.0.0",
  "description": "Backend service for Joy, a volunteer matching chatbot",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:integration": "cross-env NODE_ENV=development jest tests/integration",
    "test:unit": "cross-env NODE_ENV=development jest tests/unit",
    "lint": "eslint . --ext .ts",
    "start:ts": "ts-node src/app.ts"
  },
  "keywords": [
    "volunteer",
    "chatbot",
    "matching",
    "typescript",
    "node"
  ],
  "author": "lucas gros",
  "license": "ISC",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@langchain/anthropic": "^0.3.15",
    "@langchain/core": "^0.3.42",
    "axios": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "langchain": "^0.3.19",
    "langsmith": "^0.3.11",
    "mongodb": "^5.9.2",
    "mongoose": "^7.6.3",
    "nodemon": "^3.1.9",
    "papaparse": "^5.5.1",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/papaparse": "^5.3.15",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
