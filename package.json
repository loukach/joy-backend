{
  "name": "joy-backend",
  "version": "1.0.0",
  "description": "Backend service for Joy, a volunteer matching chatbot",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "mkdir -p dist/cache && cp -R src/* dist/",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:integration": "cross-env NODE_ENV=development jest tests/integration",
    "test:unit": "cross-env NODE_ENV=development jest tests/unit",
    "lint": "eslint ."
  },
  "keywords": [
    "volunteer",
    "chatbot",
    "matching",
    "nodejs"
  ],
  "author": "lucas gros",
  "license": "ISC",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@langchain/anthropic": "^0.3.15",
    "@langchain/core": "^0.3.42",
    "axios": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "langchain": "^0.3.19",
    "langsmith": "^0.3.11",
    "mongodb": "^5.9.2",
    "mongoose": "^7.6.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}